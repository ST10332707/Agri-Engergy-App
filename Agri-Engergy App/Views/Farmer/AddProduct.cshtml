@model Agri_Engergy_App.Models.ProductTable
@{
    ViewData["Title"] = "Add Product";
}

<style>
    /* Black background and light text  */
    body {
        background-color: #6c757d;
        color: #ffffff;
        color: #f0f0f0; /* Light gray text */
        font-family: Arial, sans-serif;
    }
</style>

<h2 style="color: #000000;">Add New Product</h2>

<form asp-action="AddProduct" asp-controller="Farmer" method="post">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductCategory"></label>
        <select asp-for="ProductCategory" class="form-control">
            <option value="">-- Select Category --</option>
            <option>Fruit</option>
            <option>Dairy</option>
            <option>Vegetable</option>
            <option>Meat</option>
        </select>
        <span asp-validation-for="ProductCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitOfMeasurement"></label>
        <select asp-for="UnitOfMeasurement" class="form-control">
            <option value="">-- Select Unit Of Measurement --</option>
            <option>Per Kg</option>
            <option>Per L</option>
        </select>
        <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductionDate"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
</form>

<div class="text-center mt-3">
    <a asp-controller="Farmer" asp-action="Index" class="btn btn-success">Return to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}