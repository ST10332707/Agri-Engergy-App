@{
    ViewData["Title"] = "Farmer";
}

<style>
    /* Black background and light text  */
    body {
        background-color: #6c757d;
        color: #ffffff;
        color: #f0f0f0; /* Light gray text */
        font-family: Arial, sans-serif;
    }
</style>

<h2 style="color: #000000;">Welcome @ViewBag.UserName @ViewBag.UserSurname!</h2>

<div class="d-flex flex-column align-items-center gap-3 mt-4">

    <!-- Add Product Button -->
    <form asp-controller="Farmer" asp-action="AddProduct" method="get">
        <button type="submit" class="btn btn-primary">Add New Product</button>
    </form>

    <!-- Display Product Button -->
    <form asp-controller="Farmer" asp-action="DisplayProduct" method="get">
        <button type="submit" class="btn btn-primary">View My Products</button>
    </form>

    <!-- Logout Button -->
    <form asp-controller="Home" asp-action="Logout" method="post" style="margin-top: 20px;">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>
