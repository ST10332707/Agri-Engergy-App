 @model List<Agri_Engergy_App.Models.ProductTable>

@{
    ViewData["Title"] = "My Products";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        margin-top: 30px;
        color: #343a40;
    }

    .table thead {
        background-color: #198754;
        color: white;
    }

    .table tbody tr:hover {
        background-color: #e9f7ef;
    }

    .btn-success {
        font-weight: 600;
        font-size: 1.1rem;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">My Products</h2>

    <div class="table-responsive">
        <table class="table table-bordered align-middle shadow">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price (R)</th>
                    <th>Unit</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductCategory</td>
                        <td>@string.Format("{0:0.00}", product.ProductPrice)</td>
                        <td>@product.UnitOfMeasurement</td>
                        <td>@product.ProductionDate.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Farmer" asp-action="Index" class="btn btn-success">⬅ Return to Dashboard</a>
    </div>
</div>