@model List<Agri_Engergy_App.Models.ProductTable>

@{
    ViewData["Title"] = "My Products";
}

<!-- Page styling: sets a dark background with light text -->
<style>   
    body {
        background-color: #6c757d;
        color: #ffffff;
        color: #f0f0f0;
        font-family: Arial, sans-serif;
    }
</style>

<h2 style="color: #000000;">My Products</h2>

<!-- Table to display all products added by this farmer -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Unit</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductCategory</td>
                <td>R @product.ProductPrice</td>
                <td> @product.UnitOfMeasurement</td>
                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to navigate to the Farmer dashboard (Farmer/Index) -->
<div class="text-center mt-3">
    <a asp-controller="Farmer" asp-action="Index" class="btn btn-success">Return to Dashboard</a>
</div>
