@model Agri_Engergy_App.Models.UserTable

@{
    ViewData["Title"] = "Sign Up";
}

<style>

    /* Black background and light text  */
    body {
        background-color: #6c757d;color: #ffffff;
        color: #f0f0f0; /* Light gray text */
        font-family: Arial, sans-serif;
    }

    .signup-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 40px;
    }

    form {
        width: 90%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
    }

    input, select, button {
        margin: 10px 0;
        padding: 10px;
        font-size: 16px;
    }
</style>

<div class="signup-form">
    <form asp-controller="SignUp" asp-action="SignUp" method="post">
        <h2 style="color: #000000;">Create Profile:</h2>

        <input type="text" name="UserName" placeholder="Name" required />
        <input type="text" name="UserSurname" placeholder="Surname" required />
        <input type="text" name="UserEmail" placeholder="example@gmail.com" required />

        <select name="Role" required>
            <option value="">-- Select Role --</option>
            <option value="Farmer">Farmer</option>
            <option value="Employee">Employee</option>
        </select>

        <input asp-for="Password" type="password" placeholder="Create Password" required />

        <button type="submit">Submit</button>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-controller="Login" asp-action="Login" class="btn btn-success">Return to Login</a>
</div>