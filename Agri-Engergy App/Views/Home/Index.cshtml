@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to the Farm Portal</h2>

<div class="role-selection">
    <p>Select your role to log in:</p>

    <form method="post" action="/Account/Login">
        <button type="submit" name="role" value="Farmer" class="btn btn-success">Login as Farmer</button>
        <button type="submit" name="role" value="Employee" class="btn btn-primary">Login as Employee</button>
    </form>
</div>

<style>
    .role-selection {
        margin-top: 50px;
        text-align: center;
    }

    .role-selection button {
        margin: 10px;
        padding: 10px 20px;
        font-size: 16px;
    }
</style>
