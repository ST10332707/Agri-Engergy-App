@{
    ViewData["Title"] = "Home Page";
}

<div class="role-selection">
    <p>Select your role to log in:</p>

    <form asp-controller="Home" asp-action="SelectRole" method="post">
        <button type="submit" name="role" value="Farmer" class="btn btn-success btn-block">Login as Farmer</button>
        <button type="submit" name="role" value="Employee" class="btn btn-primary btn-block">Login as Employee</button>
    </form>
</div>

<style>
    .role-selection {
        margin-top: 50px;
        text-align: center;
    }

    .role-selection form {
            display: flex;
            flex-direction: column;
            align-items: center;
    }

    .role-selection button {
            width: 90%;
            max-width: 400px;
            margin: 10px auto;
            padding: 12px;
            font-size: 16px;
            display: block;
    }
</style>