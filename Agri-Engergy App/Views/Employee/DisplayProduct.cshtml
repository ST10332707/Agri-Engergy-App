@model List<Agri_Engergy_App.Models.FarmerProductGroup>

@{
    ViewData["Title"] = "Farmer Products";
}

<!-- Optional: import Bootstrap if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        margin-top: 30px;
        margin-bottom: 20px;
        color: #343a40;
    }

    .farmer-card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 30px;
    }

    .farmer-name {
        color: #198754;
        font-weight: bold;
    }

    .table thead {
        background-color: #198754;
        color: #ffffff;
    }

    .btn-success {
        font-weight: bold;
        padding: 10px 20px;
        font-size: 1.1rem;
    }
</style>

<div class="container">
    <h2 class="text-center">All Farmers' Products</h2>

    @foreach (var group in Model)
    {
        <div class="farmer-card">
            <h4 class="farmer-name">@group.FarmerName @group.FarmerSurname</h4>
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price (R)</th>
                            <th>Unit</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in group.Products)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.ProductCategory</td>
                                <td>@string.Format("{0:0.00}", product.ProductPrice)</td>
                                <td>@product.UnitOfMeasurement</td>
                                <td>@product.ProductionDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Employee" asp-action="Index" class="btn btn-success">⬅ Return to Dashboard</a>
    </div>
</div>