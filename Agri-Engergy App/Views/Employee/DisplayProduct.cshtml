@model List<Agri_Engergy_App.Models.FarmerProductGroup>

@{
    ViewData["Title"] = "Farmer Products";
}

<h2>All Farmers' Products</h2>

@foreach (var group in Model)
{
    <h4>@group.FarmerName @group.FarmerSurname</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in group.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.UnitOfMeasurement</td>
                    <td>@product.ProductionDate</td>
                </tr>
            }
        </tbody>
    </table>
}

