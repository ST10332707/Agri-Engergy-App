@model List<Agri_Engergy_App.Models.FarmerProductGroup>

@{
    ViewData["Title"] = "Farmer Products";
}

<h2 style="color: #000000;">All Farmers' Products</h2>

<style>
    /* Black background and light text  */
    body {
        background-color: #6c757d;
        color: #ffffff;
        color: #f0f0f0; /* Light gray text */
        font-family: Arial, sans-serif;
    }
</style>

@foreach (var group in Model)
{
    <h4 style="color: #000000;">@group.FarmerName @group.FarmerSurname</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in group.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.UnitOfMeasurement</td>
                    <td>@product.ProductionDate</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="text-center mt-3">
    <a asp-controller="Employee" asp-action="Index" class="btn btn-success">Return to Dashboard</a>
</div>
